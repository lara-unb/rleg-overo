#include <stdio.h>
#include "taskScheduler.h"

int main(){
  TASK_S task1,task2;

  timer_new_task(&task1,ping);
  timer_new_task(&task2,pong);

  task1.period_us = 1000;
  task2.period_us = 500;

  timer_start_task(&task1);
  timer_start_task(&task2);

  while(!getchar());

  timer_stop_task(&task1);
  timer_stop_task(&task2);
}
